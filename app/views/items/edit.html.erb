<div class="box">
  <h2 class="box-title">投稿</h2>
  <div class="box-inner">
    <%= form_for(@item, :html => {:multipart => true}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "店名" %>
      </div>
    
      <div class="form-group">
        <%= f.text_area :description, class: "form-control", placeholder: "おすすめポイント" %>
      </div>
      
       <div class="form-group">
        <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
      </div>
      
      <div>
      <%= f.select :category_id, Category.all.map { |p| [p.name, p.id] } %>
      </div>
      
      <div class="form-group">
        ファイル<br />
        <%= f.file_field :image %>
      </div>
      <div class="submit-group">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>