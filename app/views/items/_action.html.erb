<div class="action">
  <% if current_user.want? item %>
    <%= render 'items/unwant' , item: item %>
  <% else %>
    <%= render 'items/want' , item: item %>
  <% end %> 

  <% unless current_page?(item) %>
    <%= link_to "詳細" , item , class: "btn btn-info btn-sm" %>
  <% end %>  
  
  <% unless current_page?(item) %>
    <%= link_to "編集" , edit_item_path(item) , class: "btn btn-info btn-sm btn-warning" %>
  <% end %>  
  
  <% unless current_page?(item) %>
   <%= link_to "削除" , item , class: "btn btn-info btn-sm btn-danger", method: :delete %>
  <% end %>
</div>